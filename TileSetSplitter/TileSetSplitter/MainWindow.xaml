<Window x:Class="TileSetSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileSetSplitter"
        mc:Ignorable="d"
        Title="Tile Set Splitter" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="643*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="ImportButton" Content="Import" HorizontalAlignment="Left" Margin="28,29,0,0" VerticalAlignment="Top" Width="100" Click="ImportButtonClick" Height="30"/>

        <Canvas x:Name="Canvas" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,10" Background="LightGray" />

        <TextBlock  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" Margin="30,180,0,0"  FontSize="14" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="SpriteWidth" HorizontalAlignment="Left" Height="20" Margin="80,180,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="40" Grid.Row="0" Grid.Column="0" />

        <TextBlock  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Margin="30,210,0,0"  FontSize="14" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="SpriteHeight" HorizontalAlignment="Left" Height="20" Margin="80,210,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="40" Grid.Row="0" Grid.Column="0" />

        <TextBlock  HorizontalAlignment="Left" TextWrapping="Wrap" Text="OffsetX" VerticalAlignment="Top" Margin="30,240,0,0"  FontSize="14" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="OffsetX" HorizontalAlignment="Left" Height="20" Margin="80,240,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="40" Grid.Row="0" Grid.Column="0" />

        <TextBlock  HorizontalAlignment="Left" TextWrapping="Wrap" Text="OffsetY" VerticalAlignment="Top" Margin="30,270,0,0"  FontSize="14" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="OffsetY" HorizontalAlignment="Left" Height="20" Margin="80,270,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="40" Grid.Row="0" Grid.Column="0" />

        <Button x:Name="ApplyButton" Content="Apply" HorizontalAlignment="Left" Margin="30,320,0,0" VerticalAlignment="Top" Width="100" Click="ApplyButtonClick" Height="30"/>
        <Button x:Name="SplitButton" Content="Split" HorizontalAlignment="Left" Margin="30,370,0,0" VerticalAlignment="Top" Width="100" Click="SplitButtonClick" Height="30"/>
    </Grid>

</Window>
