<Window x:Class="TileSetSplitter.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileSetSplitter"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="Export" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="361*"/>
            <RowDefinition Height="58*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>

        <UniformGrid Name="Sprites" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" Background="LightGray" ></UniformGrid>
        <UniformGrid Name="SelectedSprites" Grid.Row="0" Grid.Column="1" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" Background="LightGray"></UniformGrid>
        <Button x:Name="ExportSpritesButton" Grid.Row="1" Content="Export Sprites" Click="ExportSpritesButtonClick" Margin="140,14,141,14"/>

    </Grid>
</Window>
